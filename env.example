# Root Environment Configuration
# Copy this file to .env and modify as needed

# Development Settings
NODE_ENV=development

# Server Configuration
SERVER_PORT=3000
SERVER_CORS_ORIGIN=http://localhost:3001
SERVER_API_VERSION=1.0.0
SERVER_API_NAME="Task Management API"
SERVER_LOG_LEVEL=info

# Web App Configuration
WEB_PORT=3001
WEB_API_BASE_URL=http://localhost:3000
WEB_API_TIMEOUT=10000
WEB_APP_NAME="TaskFlow"
WEB_APP_VERSION=1.0.0
WEB_ENABLE_ANALYTICS=false
WEB_ENABLE_DEBUG_MODE=true

